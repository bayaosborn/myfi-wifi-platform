<!-- Global Call Script -->
<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script>
(function() {
    const userId = "{{ session.get('user_id') }}";
    
    if (!userId) {
        console.log('âš ï¸ No user logged in, skipping global call setup');
        return;
    }
    
    console.log('ðŸ”§ [GlobalCall] Initializing for user:', userId);
    
    let globalSocket = null;
    let incomingCallData = null;
    
    // Initialize socket
    function initGlobalSocket() {
        globalSocket = io({
            transports: ['websocket', 'polling'],
            reconnection: true,
            reconnectionDelay: 1000,
            reconnectionAttempts: 5
        });
        
        globalSocket.on('connect', () => {
            console.log('âœ… [GlobalCall] Socket connected:', globalSocket.id);
        });
        
        globalSocket.on('disconnect', (reason) => {
            console.log('âŒ [GlobalCall] Socket disconnected:', reason);
        });
        
        globalSocket.on('connect_error', (error) => {
            console.error('âŒ [GlobalCall] Connection error:', error);
        });
        
        globalSocket.on('incoming_call', (data) => {
            console.log('ðŸ“ž [GlobalCall] Incoming call from:', data.caller_username);
            handleIncomingCall(data);
        });
        
        globalSocket.on('call_ended', () => {
            console.log('ðŸ“´ [GlobalCall] Call ended by caller');
            hideCallPopup();
        });
    }
    
    function handleIncomingCall(data) {
        incomingCallData = data;
        
        // Show popup
        document.getElementById('globalCallerName').textContent = data.caller_username;
        document.getElementById('globalIncomingCall').style.display = 'flex';
        
        // Play ringtone (optional)
        playRingtone();
        
        // Browser notification
        if ('Notification' in window && Notification.permission === 'granted') {
            new Notification('Incoming Call from ' + data.caller_username, {
                body: 'Click to answer',
                icon: '/static/logo.svg',
                requireInteraction: true,
                tag: 'incoming-call'
            });
        }
        
        // Vibrate (mobile)
        if ('vibrate' in navigator) {
            navigator.vibrate([200, 100, 200, 100, 200]);
        }
    }
    
    function hideCallPopup() {
        document.getElementById('globalIncomingCall').style.display = 'none';
        stopRingtone();
        incomingCallData = null;
    }
    
    let ringtoneAudio = null;
    function playRingtone() {
        // You can add a ringtone mp3 file
        // ringtoneAudio = new Audio('/static/ringtone.mp3');
        // ringtoneAudio.loop = true;
        // ringtoneAudio.play().catch(e => console.log('Ringtone play failed:', e));
    }
    
    function stopRingtone() {
        if (ringtoneAudio) {
            ringtoneAudio.pause();
            ringtoneAudio.currentTime = 0;
        }
    }
    
    // Accept call button
    document.getElementById('globalAcceptBtn').addEventListener('click', () => {
        console.log('âœ… [GlobalCall] Accepting call');
        
        // Store call data in sessionStorage
        sessionStorage.setItem('pendingCall', JSON.stringify(incomingCallData));
        
        // Redirect to search page
        window.location.href = '/search';
    });
    
    // Reject call button
    document.getElementById('globalRejectBtn').addEventListener('click', () => {
        console.log('âŒ [GlobalCall] Rejecting call');
        
        if (incomingCallData && globalSocket) {
            globalSocket.emit('hang_up', { 
                other_user_id: incomingCallData.caller_id,
                call_id: incomingCallData.call_id
            });
        }
        
        hideCallPopup();
    });
    
    // Request notification permission
    if ('Notification' in window && Notification.permission === 'default') {
        Notification.requestPermission().then(permission => {
            console.log('ðŸ”” Notification permission:', permission);
        });
    }
    
    // Initialize socket on page load
    initGlobalSocket();
    
    console.log('âœ… [GlobalCall] Setup complete');
})();
</script>
{% endif %}