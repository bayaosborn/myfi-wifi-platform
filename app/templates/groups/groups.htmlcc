    async function joinGroup(code, name, maxMembers, btnElement) {
  // ✅ CHECK IF USER ALREADY IN A GROUP
  const checkRes = await fetch('/api/whoami');
  const userData = await checkRes.json();
  
  if (userData.member_id) {
    alert("You're already in a group! Leave your current group first from My Account page.");
    return;
  }
  
  const upfrontFee = maxMembers === 2 ? 200 : 150;
  
  const confirmed = confirm(`Join "${name}"\n\nUpfront fee: ${upfrontFee} KSh will be deducted from your wallet.\n\nContinue?`);
  if (!confirmed) return;
  
  // ✅ SHOW LOADING STATE (if button provided)
  if (btnElement) {
    btnElement.disabled = true;
    btnElement.textContent = 'Joining...';
  }
  
  try {
    const res = await fetch('/api/join-group', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({ group_code: code })
    });
    
    const data = await res.json();
    
    if (data.success) {
      alert(data.message);
      location.href = '/my-account';
    } else {
      alert(data.message);
      if (btnElement) {
        btnElement.disabled = false;
        btnElement.textContent = 'Join Group';
      }
    }
  } catch (error) {
    alert('Network error. Please try again.');
    if (btnElement) {
      btnElement.disabled = false;
      btnElement.textContent = 'Join Group';
    }
  }
}
  </script>
</body>
</html>