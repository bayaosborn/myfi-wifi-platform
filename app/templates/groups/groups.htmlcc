<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Groups - MyFi</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      color: #000;
      padding: 20px;
      margin: 0;
    }
    h1 { color: #0051ff; text-align: center; }
    .container {
      max-width: 800px;
      margin: 0 auto;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
    }
    .search-box {
      margin: 20px 0;
      text-align: center;
    }
    .search-box input {
      width: 60%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }
    .search-box button {
      padding: 12px 20px;
      background: #0051ff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-left: 10px;
    }
    .group-item {
      border: 1px solid #ddd;
      padding: 15px;
      margin: 10px 0;
      border-radius: 4px;
    }
    .group-name {
      color: #0051ff;
      font-size: 18px;
      font-weight: bold;
    }
    .group-info {
      color: #666;
      margin: 5px 0;
      font-size: 14px;
    }
    .full { color: #dc3545; }
    .available { color: #28a745; }
    button {
      padding: 10px 20px;
      background: #0051ff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }
    button:hover { background: #0040cc; }
    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }
    .no-results {
      text-align: center;
      color: #666;
      padding: 20px;
    }
  </style>
</head>
<body>
  
  {% include 'header.html' %}
  
  <div class="container">
    <h1>Find Groups</h1>
    
    <div class="search-box">
      <input type="text" id="searchCode" placeholder="Enter group code (e.g., ABC123)">
      <button onclick="searchGroup()">Search</button>
      <button onclick="showAll()" style="background: #6c757d;">Show All</button>
    </div>
    
    <div id="groupsList">
      {% if groups %}
        {% for group in groups %}
          <div class="group-item">
            <div class="group-name">{{ group.name }}</div>
            <div class="group-info">Code: <strong>{{ group.group_code }}</strong></div>
            <div class="group-info">
              Members: {{ group.member_count }}/{{ group.max_members or 3 }}
              {% if group.member_count >= (group.max_members or 3) %}
                <span class="full">FULL</span>
              {% else %}
                <span class="available">Open</span>
              {% endif %}
            </div>
            <div class="group-info">Balance: {{ group.current_balance }} KSH / {{ group.target_amount }} KSH</div>
            
            {% if group.member_count < (group.max_members or 3) %}
              <button onclick="joinGroup('{{ group.group_code }}', '{{ group.name }}', {{ group.max_members or 3 }}, this)">Join Group</button>
            {% else %}
              <button disabled>Group Full</button>
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        <p class="no-results">No groups found.</p>
      {% endif %}
    </div>
  </div>

  <script>
    async function searchGroup() {
      const code = document.getElementById('searchCode').value.trim().toUpperCase();
      if (!code) return;
      
      const res = await fetch(`/api/search-group?code=${code}`);
      const data = await res.json();
      
      if (data.found) {
        displayGroups([data.group]);
      } else {
        document.getElementById('groupsList').innerHTML = '<p class="no-results">Group not found</p>';
      }
    }
    
    function showAll() {
      location.reload();
    }
    
    function displayGroups(groups) {
      const html = groups.map(g => `
        <div class="group-item">
          <div class="group-name">${g.name}</div>
          <div class="group-info">Code: <strong>${g.group_code}</strong></div>
          <div class="group-info">Members: ${g.member_count}/${g.max_members || 3} 
            ${g.member_count >= (g.max_members || 3) ? '<span class="full">FULL</span>' : '<span class="available">Open</span>'}
          </div>
          <div class="group-info">Balance: ${g.current_balance} KSH / ${g.target_amount} KSH</div>
          ${g.member_count < (g.max_members || 3)
            ? `<button onclick="joinGroup('${g.group_code}', '${g.name}', ${g.max_members || 3})">Join Group</button>`
            : '<button disabled>Group Full</button>'}
        </div>
      `).join('');
      
      document.getElementById('groupsList').innerHTML = html;
    }


